    <button onclick="showLyrics()">Lirik Lagu</button>
    <button onclick="hubungi()">Hubungi kami <img src="https://cdn.jsdelivr.net/npm/simple-icons@3.13.0/icons/whatsapp.svg" class="whatsapp-logo" alt="WhatsApp Logo"></button>

    <div id="lyrics"></div>

    <script>
        function jeda() {
            return new Promise(resolve => setTimeout(resolve, 100)); // Jeda 100ms antara huruf
        }

        async function showLyrics() {
            const lirik = [
                "Pada akhirnya pisah juga :)",
                "...........................",
                "Aku tak kau anggap pada cerita",
                "Aku tak kau anggap pada derita",
                "Tapi kamu berlaku bagai pemilik ragaku",
                "Tapi aku letih juga",
                "Lebih baik kita masing masing"
            ];

            const lyricsDiv = document.getElementById('lyrics');
            lyricsDiv.innerHTML = ''; // Kosongkan div sebelum menampilkan lirik

            for (let i = 0; i < lirik.length; i++) {
                for (let char of lirik[i]) { // Loop melalui setiap karakter
                    lyricsDiv.innerHTML += char; // Tampilkan karakter
                    await jeda(); // Tunggu jeda sebelum melanjutkan
                }
                lyricsDiv.innerHTML += '<br>'; // Pindah ke baris berikutnya
            }
        }

        async function hubungi() {
            const whatsappUrl = "https://wa.me/+6281917760823";
            window.open(whatsappUrl, "_blank");
        }
    </script>

